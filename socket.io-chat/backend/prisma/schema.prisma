generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Room {
  id       String    @id @default(auto()) @map("_id") @db.ObjectId
  name     String
  messages Message[]
  users    User[]
}

model User {
  id       String @id @map("_id")
  username String
  roomId   String @db.ObjectId
  room     Room   @relation(fields: [roomId], references: [id])
}

model Message {
  id        String @id @default(auto()) @map("_id") @db.ObjectId
  content   String
  roomId    String @db.ObjectId
  room      Room   @relation(fields: [roomId], references: [id])
  timestamp Int
  username  String
}
